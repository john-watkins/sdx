@{
    Layout = "~/Views/Shared/_Root.Head.cshtml";

}
@Html.Widget("body_start_html_tag_after")
@*@Html.Partial("_Notifications")*@
<div>
    @Html.Action("JavaScriptDisabledWarning", "Common")
    <script type="text/javascript">
        AjaxCart.init(false, '.cart-qty', '.wishlist-qty', '#flyout-cart', ".cart-sub-total", ".cart-item-text");
    </script>

    @*ajax loading window*@
    <div class="ajax-loading-block-window" style="display: block">
        <div class="loading-image">
        </div>
    </div>

    <div>
        <div class="pre-header">
            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("_Notifications")
                </div>
            </div>
            @Html.Partial("TopHeader")<!--/header_top-->
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-4 additional-shop-info">
                        <ul class="list-unstyled list-inline">
                            <li><a href="#"><i class="fa fa-envelope"></i> shop@springdox.com</a></li>
                        </ul>
                    </div>
                    <div class="col-md-8 col-sm-8 additional-nav">
                        <ul class="list-unstyled list-inline pull-right">                           
                            @Html.Action("HeaderLinks", "Common")                           
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <header id="header" class="header">
            <!--header-->
            <div class="container">
                <a class="site-logo logo" href="@Url.RouteUrl("HomePage")">
                    <img src="~/Themes/NopShop/Content/css/images/doxshop.png" />
                </a>
                <a href="javascript:void(0);" class="mobi-toggler"><i class="fa fa-bars"></i></a>
                @Html.Action("ShoppingCartLink", "Common")
                <div class="header-navigation">
                    <ul>
                        @Html.Partial("Header")<!--/header-middle-->
                    </ul>
                </div>
            </div>
        </header>
        @Html.Widget("content_before")
        <div class="container main-content-container">
            @RenderBody()
        </div>
    </div>
    @Html.Widget("content_after")
    @Html.Action("EuCookieLaw", "Common")
    <!-- BEGIN STEPS -->
    <div class="steps-block steps-block-red">
        <div class="container">
            <div class="row">
                <div class="col-md-4 steps-block-col">
                    <i class="fa fa-truck"></i>
                    <div>
                        <h2>Free shipping</h2>
                        <em>Express delivery withing 3 days</em>
                    </div>
                    <span>&nbsp;</span>
                </div>
                <div class="col-md-4 steps-block-col">
                    <i class="fa fa-gift"></i>
                    <div>
                        <h2>Daily Gifts</h2>
                        <em>3 Gifts daily for lucky customers</em>
                    </div>
                    <span>&nbsp;</span>
                </div>
                <div class="col-md-4 steps-block-col">
                    <i class="fa fa-phone"></i>
                    <div>
                        <h2>477 505 8877</h2>
                        <em>24/7 customer care available</em>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END STEPS -->
    @Html.Action("Footer", "Common")
</div>
@Html.Widget("body_end_html_tag_before")
