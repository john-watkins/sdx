@using Nop.Core
@using Nop.Core.Infrastructure;
@{
    var displayMiniProfiler = CommonHelper.GetTrustLevel() >= AspNetHostingPermissionLevel.High &&
    EngineContext.Current.Resolve<Nop.Core.Domain.StoreInformationSettings>().DisplayMiniProfilerInPublicStore;

    //resources
    Html.AppendScriptParts("~/Themes/NopShop/Scripts/views/shoppingcart-controller.js");
    Html.AppendScriptParts("~/Themes/NopShop/Scripts/services/shoppingcart-service.js");
    Html.AppendScriptParts("~/Themes/NopShop/Scripts/services/product-service.js");
    Html.AppendScriptParts("~/Themes/NopShop/Scripts/main.js");    
    Html.AppendScriptParts("~/Themes/NopShop/Scripts/price-range.js");
    Html.AppendScriptParts("~/Themes/NopShop/Scripts/handlebars-v2.0.0.js");    
    Html.AppendScriptParts("~/Scripts/public.ajaxcart.js");
    Html.AppendScriptParts("~/Scripts/public.common.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/carousel-owl-carousel/owl-carousel/owl.carousel.min.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/jquery-validation/js/additional-methods.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/jquery-validation/js/jquery.validate.js");    
    //Html.AppendScriptParts("~/Themes/NopShop/Scripts/jquery.scrollUp.min.js");
    //NopShop Scripts
    <!-- Load javascripts at bottom, this will reduce page load time -->
    <!-- BEGIN CORE PLUGINS(REQUIRED FOR ALL PAGES) -->
    <!--[if lt IE 9]>    
        Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/respond.min.js");
    <![endif]-->  
        

    <!-- BEGIN PAGE LEVEL JAVASCRIPTS (REQUIRED ONLY FOR CURRENT PAGE) -->

    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/zoom/jquery.zoom.min.js");
    Html.AppendScriptParts("~/Scripts/jquery-ui-1.10.3.custom.min.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/zoom/jquery.zoom.min.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/bootstrap-touchspin/bootstrap.touchspin.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/uniform/jquery.uniform.min.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/rateit/src/jquery.rateit.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/select2/select2.min.js");    
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/frontend/layout/scripts/layout.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/bootstrap/js/bootstrap.min.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/frontend/layout/scripts/back-to-top.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/fancybox/source/jquery.fancybox.pack.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/jquery-migrate.min.js");
    Html.AppendScriptParts("~/Themes/NopShop/Content/metronic/assets/global/plugins/jquery.min.js");
    <!-- END CORE PLUGINS -->


}
<!DOCTYPE html>
<html @Html.Partial("LanguageAttributes")>
<head>
    <title>@Html.NopTitle(true)</title>
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    <meta name="description" content="@(Html.NopMetaDescription())" />
    <meta name="keywords" content="@(Html.NopMetaKeywords())" />
    <meta name="generator" content="nopCommerce" />
    @Html.NopHeadCustom()
    @*This is used so that themes can inject content into the header*@
    @Html.Partial("Head")
    @Html.Widget("head_html_tag")
    @Html.NopCssFiles(this.Url, ResourceLocation.Head)
    @Html.NopScripts(this.Url, ResourceLocation.Head)
    @Html.NopCanonicalUrls()
    @Html.Action("RssHeaderLink", "News")
    @Html.Action("RssHeaderLink", "Blog")
    @*Favicon - upload favicon.ico file to the root directory*@
    @Html.Action("Favicon", "Common")
    @if (displayMiniProfiler)
    {
        @StackExchange.Profiling.MiniProfiler.RenderIncludes();
    }       

</head>
<body class="ecommerce">
    @RenderBody()
    @Html.NopCssFiles(this.Url, ResourceLocation.Foot)
    @Html.NopScripts(this.Url, ResourceLocation.Foot)
</body>
</html>
